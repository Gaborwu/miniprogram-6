.reviewpart{
  padding: 8rpx 16rpx;
  box-shadow: 0 0 8px rgba(0,0,0,0.2);
  margin-bottom: 8rpx;
  background-color: #f3e1e1;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
}

.photo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.nickname {
  color: #393e46;
  font-weight: light;
}
.review-container {
  margin-top: 32px;
  width: 100%;
}
.image {
    background-size: cover;
    background-position: center;
    height: 180px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24px;
    font-weight: bold;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
    box-shadow: 0 0 15px rgba(0,0,0,0.2);
    
  }
  
  .page-container {
    width: 100%;
  }
  .text-container {
    padding: 24rpx;
  }
  .review-title {
    font-size: 32px;
  }
  
  .btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .subHeader {
    font-size: 48rpx;
    font-weight: bolder;
  }
  
  .page-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
  }